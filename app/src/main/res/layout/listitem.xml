<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/dp_imageView"
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/deep2"
        android:background="#101d25"
        android:paddingLeft="11dp"/>

    <LinearLayout
        android:id="@+id/tv_main_layout"
        android:layout_toRightOf="@id/dp_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#101d25"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deep Dhar"
            android:textSize="14dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/msg_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes, today was a hectic day"
            android:textSize="14dp"
            android:fontFamily="sans-serif"
            android:textColor="#9fa2a7"/>

    </LinearLayout>

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="12/29/20"
        android:textSize="11dp"
        android:textColor="#9fa2a7"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:paddingRight="8dp"/>

</RelativeLayout>